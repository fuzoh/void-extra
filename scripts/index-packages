#!/usr/bin/env sh

# Sometimes xbps-src builds a bunch of other junk I don't want to be liable for distributing

COMMAND="
  mkdir /work/packages
  
  for pkg in /work/\"\$REPO_NAME\"/srcpkgs/*; do
    name=\$(basename \"\$pkg\")

    # Make copying more verbose so it will be easier to catch errors
    echo \"Copying \$name\"

    cp /work/hostdir/binpkgs/\"\$name\"*.xbps /work/packages 2>/dev/null || true
  done

  cd /work/packages
  xbps-rindex -a *
"
echo "Running command: $COMMAND"
sh -c "$COMMAND"
